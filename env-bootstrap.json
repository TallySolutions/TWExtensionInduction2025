{
    "Directories"       :
    {
        "Workspace"      : "Workspace",
        "Tools"          : "Tools",
        "BuildSupportDir": "TWBuildSupport"
    },
    "ADOService"        :
    {
        "URL"           : "https://dev.azure.com",
        "Organization"  : "TallyWorld"
    },
    "TallyWorldBranchPolicies" :
    {
        "DevelopmentTrunkName" : "DevTrunk",
        "PreReleaseTrunkName"  : "PreReleaseTrunk",
        "ReleaseTrunkName"     : "ReleaseTrunk",
        "WorkBranchPrefix"     : "Work"
    },
    "RequiredSoftwares" :
    [
        {
            "Name"        : "CMake",
            "Version"     : "3.21",
            "VersionInfo" : 
            {
                "Command"    : "${InstallDir}/CMake/bin/cmake --version",
                "OutputType" : "PlainText",
                "Line"       : 1,
                "Column"     : 3
            },
            
            "Installations" : 
            [
                {
                    "Host"      : "Windows",
                    "Installer" : 
                    { 
                        "URL": 
                        {
                            "x64"  :  "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-windows-x86_64.zip",
                            "ARM64":  "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-windows-x86_64.zip"
                        },
                        "FileType"        : "Zip",
                        "InstallDir"      : "${TWHome}\\Tools",
                        "PostInstall"     : "rename ${InstallDir}\\${FILENAME_WE} ${InstallDir}\\${NAME}",
                        "UninstallMethod" : "RemoveDir"
                    }
                },
                {
                    "Host"      : "Linux",
                    "Installer" : 
                    { 
                        "URL": 
                        {
                            "x64":   "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-linux-x86_64.tar.gz",
                            "ARM64": "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-linux-aarch64.tar.gz"
                        },
                        "FileType"        : "CompressedTarball",
                        "InstallDir"      : "/usr/share",
                        "PostInstall"     : "mv -f ${InstallDir}/${FILENAME_WE} ${InstallDir}/${NAME}",
                        "UninstallMethod" : "RemoveDir"
                    }
                },
                {
                    "Host"      : "MacOS",
                    "Installer" : 
                    { 
                        "URL": 
                        {
                            "x64":   "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-macos-universal.tar.gz",
                            "ARM64": "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-macos-universal.tar.gz"
                        },
                        "FileType"        : "CompressedTarball",
                        "InstallDir"      : "/Users/Shared",
                        "PostInstall"     : "mv -f ${InstallDir}/${FILENAME_WE}/CMake.app/Contents ${InstallDir}/${NAME} && sudo rm -rf ${InstallDir}/${FILENAME_WE}",
                        "UninstallMethod" : "RemoveDir"
                    }
                }
            ]
        }
    ],
    "ADORepositories" :
    [
        {
            "Name"           : "Vishwamitra",
            "URL"            : "https://tw-vishwamitra.tallysolutions.com",
            "Organizations"  :
            [
                {
                    "Name"       : "TallyWorldPMT",
                    "Projects"   : ["TallyWorld"]
                },
                {
                    "Name"       : "Tally",
                    "Projects"   : ["SharedProjects"]
                },
                {
                    "Name"       : "Personal",
                    "Projects"   : ["${DomainName}"]
                }
            ]
        }
    ],
    "ThirdPartyRepositories" :
    [
        {
            "Name"           : "GitHub",
            "URL"            : "https://github.com",
            "Owners"  :
            [
                {
                    "Name"           : "TallySolutions",
                    "Repositories"   : 
                    [
                        {
                            "Name"    : "NanOS",
                            "CloneDir": "TallyWorldPMT/3rdParty/NanOS"
                        },
                        {
                            "Name"    : "OPS",
                            "CloneDir": "TallyWorldPMT/3rdParty/OPS"
                        },
                        {
                            "Name"    : "TWVSExtension",
                            "CloneDir": "TallyWorldPMT/TallyWorld/TWVSExtension"
                        }
                    ]
                }
            ]
        }
    ]

}