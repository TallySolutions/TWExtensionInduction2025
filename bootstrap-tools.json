{
    "RequiredSoftwares" :
    [
        {
            "Name"        : "CMake",
            "Windows"     :
            {
                "Version"     : "3.21",
                "VersionInfo" : 
                {
                    "Command"    : "${InstallDir}/CMake/bin/cmake --version",
                    "OutputType" : "PlainText",
                    "Line"       : 1,
                    "Column"     : 3
                },
                "Installer" : 
                { 
                    "URL": 
                    {
                        "x64"  :  "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-windows-x86_64.zip",
                        "ARM64":  "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-windows-x86_64.zip"
                    },
                    "FileType"        : "Zip",
                    "InstallDir"      : "${TWHome}\\Tools",
                    "PostInstalls"    : ["rename ${InstallDir}\\${FILENAME_WE} ${NAME}"],
                    "UninstallMethod" : "RemoveDir"
                }
            },
            "Linux"     :
            {
                "Version"     : "3.21",
                "VersionInfo" : 
                {
                    "Command"    : "cmake --version",
                    "OutputType" : "PlainText",
                    "Line"       : 1,
                    "Column"     : 3
                },
                "Installer" : 
                { 
                    "URL": 
                    {
                        "x64":   "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-linux-x86_64.tar.gz",
                        "ARM64": "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-linux-aarch64.tar.gz"
                    },
                    "FileType"        : "CompressedTarball",
                    "InstallDir"      : "/usr/share",
                    "PostInstalls"    : ["mv -f ${InstallDir}/${FILENAME_WE} ${InstallDir}/${NAME}", "ln -sf ${InstallDir}/${NAME}/bin/cmake /usr/bin/cmake"],
                    "UninstallMethod" : "RemoveDir"
                }
            },
            "MacOS"     :
            {
                "Version"     : "3.21",
                "VersionInfo" : 
                {
                    "Command"    : "/usr/local/bin/cmake --version",
                    "OutputType" : "PlainText",
                    "Line"       : 1,
                    "Column"     : 3
                },
                "Installer" : 
                { 
                    "URL": 
                    {
                        "x64":   "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-macos-universal.tar.gz",
                        "ARM64": "https://github.com/Kitware/CMake/releases/download/v3.21.4/cmake-3.21.4-macos-universal.tar.gz"
                    },
                    "FileType"        : "CompressedTarball",
                    "InstallDir"      : "/Users/Shared",
                    "PostInstalls"    : ["mv -f ${InstallDir}/${FILENAME_WE}/CMake.app /Applications", "ln -sf /Applications/CMake.app/Contents/bin/cmake /usr/local/bin/cmake", "rm -rf ${InstallDir}/${FILENAME_WE}"],
                    "UninstallMethod" : "RemoveDir"
                }
           }
        },
        {
            "Name"        : "rsync",
            "Windows"     :
            {
                "Version"     : "3.1.3",
                "VersionInfo" : 
                {
                    "Command"    : "${InstallDir}/rsync/rsync --version",
                    "OutputType" : "PlainText",
                    "Line"       : 1,
                    "Column"     : 3
                },
                "Installer" : 
                { 
                    "URL": 
                    {
                        "x64"  :  "https://github.com/TallySolutions/RSync/releases/download/v3.1.3/rsync-3.1.3-windows-x86_64.zip",
                        "ARM64":  "https://github.com/TallySolutions/RSync/releases/download/v3.1.3/rsync-3.1.3-windows-arm64.zip"
                    },
                    "FileType"        : "Zip",
                    "InstallDir"      : "${TWHome}\\Tools",
                    "PostInstalls"    : [],
                    "UninstallMethod" : "RemoveDir"
                }
            },
            "Linux"     :
            {
                "Version"     : "3.1.3",
                "VersionInfo" : 
                {
                    "Command"    : "rsync --version",
                    "OutputType" : "PlainText",
                    "Line"       : 1,
                    "Column"     : 3
                },
                "Installer" : 
                { 
                    "InstallDoc"      : "https://rsync.samba.org/download.html"
                }
            },
            "MacOS"     :
            {
                "Version"     : "2.6.9",
                "VersionInfo" : 
                {
                    "Command"    : "rsync --version",
                    "OutputType" : "PlainText",
                    "Line"       : 1,
                    "Column"     : 3
                },
                "Installer" : 
                { 
                    "InstallDoc"      : "https://rsync.samba.org/download.html"
                }
           }
        },
        {
            "Name"        : "git",
            "Windows"     :
            {
                "Version"     : "2.33",
                "VersionInfo" : 
                {
                    "Command"    : "git version",
                    "OutputType" : "PlainText",
                    "Line"       : 1,
                    "Column"     : 3
                },
                "Installer" : 
                { 
                    "InstallDoc"      : "https://git-scm.com/download/win"
                },
                "Validations"   : 
                [
                    {
                        "Command"        : "git config --system --default false core.longpaths",
                        "ExpectedOutput" : "true",
                        "FixCommand"     : "git config --system core.longpaths true"
                    },
                    {
                        "Command"        : "git config --global --default false pull.rebase",
                        "ExpectedOutput" : "true",
                        "FixCommand"     : "git config --global pull.rebase true"
                    },
                    {
                        "Command"        : "git config --global --default false http.sslVerify",
                        "ExpectedOutput" : "false",
                        "FixCommand"     : "git config --global http.sslVerify false"
                    },
                    {
                        "Command"        : "git config --global --default 0 core.compression",
                        "ExpectedOutput" : "0",
                        "FixCommand"     : "git config --global core.compression 0"
                    },
                    {
                        "Command"        : "git config --global --default store credential.helper",
                        "ExpectedOutput" : "manager",
                        "FixCommand"     : "git config --global credential.helper manager"
                    },
                    {
                        "Command"        : "git config --global --default false core.autocrlf",
                        "ExpectedOutput" : "false",
                        "FixCommand"     : "git config --global core.autocrlf false"
                    },
                    {
                        "Command"        : "git config --global user.name",
                        "ExpectedOutput" : "${USERNAME}",
                        "FixCommand"     : "git config --global user.name \"${USERNAME}\""
                    },
                    {
                        "Command"        : "git config --global user.email",
                        "ExpectedOutput" : "${EMAIL}",
                        "FixCommand"     : "git config --global user.email ${EMAIL}"
                    }
                ]
            },
            "Linux"     :
            {
                "Version"     : "2.25",
                "VersionInfo" : 
                {
                    "Command"    : "git version",
                    "OutputType" : "PlainText",
                    "Line"       : 1,
                    "Column"     : 3
                },
                "Installer" : 
                { 
                    "InstallDoc"      : "https://git-scm.com/download/linux"
                },
                "Validations"   : 
                [
                    {
                        "Command"        : "git config --global --default input core.autocrlf",
                        "ExpectedOutput" : "input",
                        "FixCommand"     : "git config --global core.autocrlf input"
                    }
                ]
            },
            "MacOS"     :
            {
                "Version"     : "2.30",
                "VersionInfo" : 
                {
                    "Command"    : "git version",
                    "OutputType" : "PlainText",
                    "Line"       : 1,
                    "Column"     : 3
                },
                "Installer" : 
                { 
                    "InstallDoc"      : "https://git-scm.com/download/mac"
                },
                "Validations"   : 
                [
                    {
                        "Command"        : "git config --global --default input core.autocrlf",
                        "ExpectedOutput" : "input",
                        "FixCommand"     : "git config --global core.autocrlf input"
                    }
                ]
           }
        }
    ],

    "ValidationCMakeFile"  :  "${BootstrapURL}/CMake/ValidateEnvironment.cmake"
}